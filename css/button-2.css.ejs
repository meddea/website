.button-2 {
    display: inline-block;
    min-width: 100px;
    min-height: 20px;
    border: 0;
    background-color: transparent;
    background-image: url("../img/buttons/button-white.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    color: <%= colors['On Surface']['Primary 900'].color %>;
}

.svg .button-2 {
    background-image: url("../img/buttons/button-white.svg");
}

.button-2:hover,
.button-2.hover  {
    text-decoration: underline;
}

.button-2:active,
.button-2.active {
    color: <%= colors['Gray']['300'].color %>;
}