.button-1 {
    position: relative;
    z-index: 5;
    display: inline-block;
    min-width: 100px;
    min-height: 20px;
    border: 0;
    background-color: rgba(255, 255, 255, 0.3);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    background-image: url("../img/buttons/button-grey.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    color: <%= colors.Gray["400"].color %>;
}

.svg .button-1 {
    background-image: url("../img/buttons/button-grey.svg");
}

.button-1:hover {
    text-decoration: underline;
}

.button-1:active {
    color: <%= colors.Black.color %>;
}