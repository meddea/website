.proposal__heading {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    padding: 50px 36px 60px 36px;
}

@media (min-width: 0px)  {
    .proposal__heading {
        height: 100%;
        box-sizing: border-box;
    }
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .proposal__heading {
        padding: 70px 50px 80px 50px;
    }
}


@media (min-width: <%= responsive.MEDIA.laptop%>px) {
    .proposal__heading h2 {
        max-width: 380px;
        margin:  0 auto;
    }
}

.proposal__content {
    padding: 0 36px;
    background-color: <%= colors.Surface.Gray.color %>;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .proposal__content {
        padding: 0 50px;
    }
}


@media (min-width: <%= responsive.MEDIA.laptop%>px) {
    .proposal__content {
        padding: 0 155px 0 75px;
    }
}

.proposal__content p {
    padding-bottom: 32px;
}

.proposal__content p:nth-last-of-type(1) {
    padding-bottom: 8px;
}