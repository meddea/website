.hero {
  background-image: url("../img/banner-1.png");
  background-size: 100% auto;
  background-position: top center;
  background-repeat: no-repeat;
}

.webp .hero {
  background-image: url("../img/banner-1.webp");
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .hero {
    background-size: 100% auto;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .hero {
    background-size: auto 100%;
    background-position: top left 41vw;
  }
}

@media (min-width: <%= max_width.max_width%>px) {
  .hero {
    background-position: top left 144%;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .hero__inner {
    background-color: transparent;
  }
}

.hero__spacer-top {
  padding-top: 240px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .hero__spacer-top {
    padding-top: 440px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .hero__spacer-top {
    padding-top: 90px;
  }
}

.hero__content {
  background-color: <%= colors.Surface.White.color %>;
  padding: 36px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .hero__content {
    padding: 50px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .hero__content {
    padding-left: 120px;
    padding-right: 150px;
  }
}


@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .hero__content {
    padding-left: 120px;
    padding-right: 0;
  }
}

.hero__content h1 {
  max-width: 500px;
}

.hero__content .buffer-default {
  text-align: right;
}

@media(min-width: <%= responsive.MEDIA.tablet %>px) {
  .hero__content .buffer-default {
    text-align: left;
  }
}