<%- include("../node_modules/elements/_includes/css/typography.css.ejs"); %>

.font-weight-600 {
  font-weight: 600;
}
  
.font-weight-800 {
  font-weight: 800;
}

.side-border-title {
  position: relative;
  padding-left: 30px;
}

.services .side-border-title {
  margin-left: 50px
}

@media(min-width: <%= responsive.MEDIA.tablet %>px) {
  .services .side-border-title {
    max-width: 400px;
    margin-left: 0;
  }
}

.side-border-title::before {
  content: "";
  position: absolute;
  top: 6px;
  left: 16px;
  width: 4px;
  height: 87%;
  background-color: <%= colors.Primary["500"].color %>;
}

@media(min-width: <%= responsive.MEDIA.phone %>px) {
  .side-border-title::before {
    top: 15px;
    left: 0;
    width: 9px;
    height: 85%;
  }
}

.side-border-title h1,
.side-border-title h2 {
  padding: 0;
}

.side-border-title--sub::before {
  top: 10px;
  height: 90%;
}

@media(min-width: <%= responsive.MEDIA.phone %>px) {
  .side-border-title--sub::before {
    top: 10px;
    height: 135px;
  }
}

.text-center {
  text-align: center;
}

.text-white {
  color: #FFFFFF;
}

ul {
  list-style: none;
}


ul li {
  position: relative;
}

ul li::before {
  position: absolute;
  top: 6px;
  left: -9px;
  content: "";
  display: block;
  width: 4px;
  height: 4px;
  background-color: <%= colors['On Surface']['White Secondary'].color %>;
  border-radius: 50%;
}

@media(min-width: <%= responsive.MEDIA.phone %>px) {
  ul li::before {
    top: 13px;
  }
}