.footer {
  background-color: <%= colors.Surface["Primary 900"].color %>;
}

.footer__max-width {
  padding: 0 36px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .footer__max-width {
    padding: 0 50px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .footer__max-width {
    max-width: 430px;
    margin: 0 auto;
    padding: 0;
  }
}

.footer__copyright {
  color: #FFFFFF;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  p.footer__copyright {
    font-size: 22px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  p.footer__copyright {
    font-size: 22px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .footer__copyright {
    text-align: right;
  }
  
}

.footer .responsive {
  align-items: center;
}