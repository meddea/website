.contact-us {
  background-image: url("../img/photo03_form-contact.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.webp .contact-us {
  background-image: url("../img/photo03_form-contact.webp");
}

.contact-us__max-width {
  padding: 0 36px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .contact-us__max-width {
    padding: 0 50px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .contact-us__max-width {
    max-width: 780px;
    margin: 0 auto;
    padding: 0;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
.contact-us__address {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
}

.contact-us__address address {
  font-style: normal;
}

.contact-us__address address a {
  display: block;
  padding: 8px;
  color: #bfbfbf;
  text-decoration: none;
  max-width: 400px;
}

.contact-us__address-spacer {
  padding-bottom: 16px;
}


.contact-us__address address h3 {
  color: #FFFFFF;
  font-size: 14px;
  font-weight: 400;
  padding-bottom: 24px;
}

@media (min-width: <%= responsive.MEDIA.phone %>px) {
  .contact-us__address address h3 {
    font-size: 22px;
  }
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .contact-us__address address h3 {
    font-size: 26px;
  }
}
