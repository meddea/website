.services {
    counter-reset: card; 
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .card {
        padding-right: 60px;
    }
}

.card {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.card::before {
    counter-increment: card; 
    content: '0' counter(card);
    position: absolute;
    z-index: 1;
    top: -30px;
    left: 0;
    font-size: 144px;
    font-weight: 800;
    color: #E6E6E6;
}

.card h3 {
    word-wrap: break-word;
}

.card__inner {
    position: relative;
    z-index: 2;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.card__inner h3 {
    margin-bottom: auto;
}
