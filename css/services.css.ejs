.services {
  position: relative;
}

.services__bg {
  position: absolute;
  opacity: 0.3;
  top: -110px;
  left: 18px;
  width: 65%;
  padding-bottom: 101%;
  background-image: url("../img/photo01.png");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.webp .services__bg {
  background-image: url("../img/photo01.webp");
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .services__bg {
    opacity: 0.6;
    width: 31.5%;
    padding-bottom: 64.66%;
    top: 35px;
    left: 0;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .services__bg {
    opacity: 0.7;
    width: 32%;
    padding-bottom: 53%;
    top: 230px;
    left: 0;
  }
}

.services__content {
  position: relative;
  padding: 36px;
}
  
@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .services__content {
    padding: 50px;
  }
}
  
@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .services__content {
    padding-left: 0;
    padding-right: 120px;
  }
}