.accordion__control {
    color: <%= colors.Primary["500"].color %>;
    border: 1px solid transparent;
}

.accordion__control:hover {
    text-decoration: underline;
}


.accordion__control:active {
    color: #2d6fb9;
}

.accordion__control:focus {
    border-color: <%= colors.Primary["500"].color %>;
    outline: none;
}

.accordion__control:focus:not(:focus-visible) {
  border-color: transparent;
  outline: none;
}

.accordion__control:focus-visible {
    border-color: <%= colors.Primary["500"].color %>;
    outline: none;
}

.accordion__control {
    white-space: nowrap;
    font-size: 14px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion__control {
        font-size : 22px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
    .accordion__control {
        font-size : 26px;
    }
}
