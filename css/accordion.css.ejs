<%- include("../node_modules/elements/_includes/css/accordion-functional.css.ejs"); %>
<%- include("../node_modules/elements/_includes/css/accordion-prettier.css.ejs"); %>

.accordion {
    border-radius: 0;
}

.accordion__control-parrent {
    padding-top: 20px;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
}

.accordion__control-parrent .accordion__control,
.accordion__control-parrent .accordion__control {
    float: left;
}

.js .accordion__control-parrent.accordion__control-parrent--active {
    border-bottom: 0;
}

.accordion__control {
    display: inline-block;
    width: auto;
}

.accordion__control-parrent--active .accordion__control {
    display: none;
}

.js .accordion__panel--active {
    border-bottom: 0;
}

.accordion__control-parrent:nth-last-of-type(2) {
    border-bottom: 0;
}

.accordion {
    border: 0;
    counter-reset: section; 
}

.accordion__title {
    position: relative;
    color: #313131;
    font-size: 14px;
    letter-spacing: 0.07em;
    padding: 0;
    padding-left: 25px;
}

.accordion__title br {
    display: none;
}

.accordion__title::before {
    counter-increment: section; 
    content: '0' counter(section);
    position: absolute;
    left: 0;
    font-size: 14px;
    letter-spacing: 0.07em;
    color: #313131;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion__title {
        padding-left: 38px;
    }

    .accordion__title,
    .accordion__title::before {
        font-size : 22px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion__title {
        padding-left: 43px;
    }

    .accordion__title,
    .accordion__title::before {
        font-size : 26px;
    }
}

.accordion__control-parrent--active .accordion__title {
    position: relative;
    z-index: 1;
    padding-top: 60px;
    padding-left: 0;
    font-size: 36px;
    font-weight: 800;
    letter-spacing: 0;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion__control-parrent--active .accordion__title {
        font-size : 55px;
    }
}

.accordion__control-parrent--active .accordion__title::before {
    z-index: -1;
    top: -25px;
    left: -4px;
    font-size: 144px;
    letter-spacing: 0.07em;
    color: #E6E6E6;
}


.accordion__control-parrent--active .accordion__title br {
    display: block;
}


@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion__control-parrent--active .accordion__title {
        max-width: 400px;
    }
}

.accordion-container {
    padding: 0 40px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion-container {
        padding: 0 135px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion-container {
        padding: 0 60px 0 180px;
    }
}

.accordion-spacer-top {
    padding-top: 40px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion-spacer-top {
        padding-top: 105px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion-spacer-top {
        padding-top: 95px;
    }
}

.accordion-spacer-bottom {
    padding-top: 20px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion-spacer-bottom {
        padding-top: 70px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion-spacer-bottom {
        padding-top: 95px;
    }
}

.accordion-item__spacer-inner-1 {
    padding-top: 30px
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion-item__spacer-inner-1 {
        padding-top: 65px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop %>px) {
    .accordion-item__spacer-inner-1 {
        padding-top: 95px;
    }
}

.accordion-item__spacer-inner-2 {
    padding-top: 40px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .accordion-item__spacer-inner-2 {
        padding-top: 130px;
    }
}
