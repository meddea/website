.header {
  padding-top: 24px;
  padding-bottom: 24px;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .header {
    padding-top: 60px;
    padding-bottom: 60px;
  }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
  .header {
    padding-top: 90px;
    padding-bottom: 24px;
  }
}

.header__container {
  align-items: start;
}

.main-menu li::before{
  content: none;
}

.main-menu__item {
  padding: 20px;
}


@media(min-width: 0px) {
  .main-menu__item {
    padding: 23px 0;
  }
}

@media(min-width: <%= responsive.MEDIA.desktop%>px) {
  .main-menu__item {
    padding: 0 38px;
  }
}

.logo a {
  padding: 0;
}

.logo a img {
  max-width: 115px;
  width: 100%;
}

@media(min-width: <%= responsive.MEDIA.tablet %>px) {
  .logo a img {
    max-width: 300px;
  }
}

.header {
  border-bottom: 0;
}

.header__main-menu-burger {
  margin-top: auto;
  margin-bottom: auto;
}

.header__logo {
  margin-top: 20px;
}

@media(min-width: 0px) {
  .header__logo {
    margin-top: 0;
  }
}