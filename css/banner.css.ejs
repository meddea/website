.banner {
    background-image: url("../img/photo02.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.webp .banner {
    background-image: url("../img/photo02.webp");
}

.banner__max-width {
    text-align: center;
    max-width: 300px;
    margin: 0 auto;
}

@media (min-width: <%= responsive.MEDIA.tablet %>px) {
    .banner__max-width {
        max-width: 400px;
    }
}

@media (min-width: <%= responsive.MEDIA.laptop%>px) {
    .banner__max-width {
        max-width: 550px;
    }
}

.banner__max-width .button {
    margin: 0 auto;
}

.banner strong {
    font-weight: 600;
}

