<div class="header">
{% buffer buffer, "max_width"%}
  <header>
    <div class="header__container max-width">
      <div class="header__logo logo" role="banner">
        <a href="/">
        {% set alt = site.name + " logo" %}
        {% picturePngWebp "img/logo.png", alt, "300", 124 %}
        </a>
      </div>
      <div class="header__main-menu-burger burger"></div>
      <div class="header__main-menu-container" id="main-menu-container">
        <nav aria-label="{{ site.name }} main menu">
          <div class="main-menu__button-container">
          </div>
          <ul class="main-menu" role="menubar" aria-label="{{ site.name }} main menu">
          {% for link, href in menu.links %}
              <li class="main-menu__item" role="none">
                  <a class="main-menu__link
                  {% if(href == page.url) %} main-menu__link--current {% endif %}" 
                  {% if(href == page.url) %} aria-current="page" {% endif %}
                  href="{{ href }}">{{ link }}</a>
              </li>
          {% endfor %}
          </ul>
        </nav>      
      </div>
    </div>
  </header>
  {% end_buffer %}
</div>